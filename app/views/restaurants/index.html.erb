<a href="/restaurants/new">Add a restaurant</a>

<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
	<section class="restaurant-container">
		<ul>
			<li>
				<article class="restaurant">
				<h2><%= restaurant.name %></h2><br>
						<h3>Average rating: <%= star_rating(restaurant.average_rating) %></h3>
				<p id='links'>
					<%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
					<%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
					<%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
				</p>
			<ul>
				<% restaurant.reviews.each do |review| %>
					<li>
						<article id="review">
						<%= "#{review.comments} (#{star_rating(review.rating)})" %>
						</article>
					</li>
				<% end %>
			</ul>
				</article>
			</li>
		</ul>
	</section>
	<% end %>
<% else %>
	As yet we have no restaurants listed for this area
<% end %>

